{% extends 'base.html.twig' %}

{% block leftMenu %}
    {% include 'leftMenu.html.twig' %}
{% endblock %}

{% block body %}
    <div class="row">

        <form class="form-inline" action="" method="post">

            <div class="col-md-10">
                <select name="app_id" class="form-control selectpicker" data-live-search="true">
                    {% for application in applications %}
                        <option value="{{ application.appId }}">{{ application.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
    </div>

    <div class="row">
        <h2>Lista adresow ip dla aplikacji: {{ app.request.get('app_id') }}</h2>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Adres IP</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for appIp in applicationsIps %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ appIp.ip }}</td>
                    <td class="text-right">
                        <a href="{{ path('ip_address_delete', {'id': appIp.id}) }}" class="btn btn-danger">Usu≈Ñ</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <form class="form-inline" action="" method="post">
            <input type="text" name="address_ip" />

            <a href="{{ path('ip_address_delete', {'id': 3}) }}" class="btn btn-success">Dodaj</a>
        </form>
    </div>
{% endblock %}

