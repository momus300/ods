{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <h2>Obsługiwane marki samochodów</h2>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Marka</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ brand.name}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
